{
  "name": "tree-sitter-twig",
  "repository": "https://github.com/kaermorchen/tree-sitter-twig",
  "version": "0.2.0",
  "description": "Twig grammar for tree-sitter",
  "main": "bindings/node",
  "scripts": {
    "build": "tree-sitter generate",
    "build-wasm": "tree-sitter build-wasm",
    "test": "tree-sitter test",
    "release": "release-it"
  },
  "author": "Stanislav Romanov <kaermorchen@gmail.com>",
  "license": "Mozilla Public License 2.0",
  "dependencies": {
    "nan": "^2.17.0"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "release-it": "^16.1.2",
    "tree-sitter-cli": "0.20.7"
  },
  "files": [
    "README.md",
    "LICENSE",
    "tree-sitter-twig.wasm"
  ],
  "tree-sitter": [
    {
      "scope": "twig",
      "file-types": [
        "twig",
        "html.twig"
      ],
      "highlights": [
        "queries/highlights.scm"
      ],
      "injections": "queries/injections.scm",
      "injection-regex": "twig"
    }
  ],
  "release-it": {
    "hooks": {
      "before:release": "npm run build-wasm"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
